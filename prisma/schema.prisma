generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    relationMode = "prisma"
    url          = env("DATABASE_URL")
    directUrl    = env("DATABASE_DIRECT_URL")
}

model Task {
    id        Int      @id @default(autoincrement())
    sub       String
    title     String
    completed Boolean  @default(false)
    date      DateTime @default(now())

    tags Tag[]
}

model Tag {
    id   Int    @id @default(autoincrement())
    sub  String
    name String

    tasks       Task[]
    timeEntries TimeEntry[]
}

model TimeEntry {
    id      Int      @id @default(autoincrement())
    sub     String
    seconds Int
    date    DateTime @default(now())

    tags Tag[]
}
