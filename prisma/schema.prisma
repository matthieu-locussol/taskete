generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    relationMode = "prisma"
    url          = env("DATABASE_URL")
    directUrl    = env("DATABASE_DIRECT_URL")
}

model Task {
    id        Int      @id @default(autoincrement())
    title     String
    completed Boolean  @default(false)
    seconds   Int?
    date      DateTime @default(now())
    cron      String?

    tags Tag[]
}

model Tag {
    id     Int    @id @default(autoincrement())
    name   String
    userId Int

    tasks       Task[]
    timeEntries TimeEntry[]
}

model TimeEntry {
    id   Int   @id @default(autoincrement())
    tags Tag[]
}
